/* pages/home/home.wxss */
page {
    background-color: #eee;
}

.nav {
    display: flex;
}

.search {
    width: 580rpx;
    height: 70rpx;
    margin: 10rpx auto;
    /* border: 1rpx solid rgb(77, 73, 73); */
    background-color: #eee;
    border-radius: 60rpx;
    font-size: 12px;
    flex: 8;
    padding-left: 20rpx;
}

.logo {
    flex: 1;
}

.logo image {
    margin-top: 15rpx;
    margin-left: 10rpx;
    width: 60rpx;
    height: 60rpx;
}

.icon image {
    margin-top: 15rpx;
    margin-left: 10rpx;
    width: 60rpx;
    height: 60rpx;
}

.icon {
    flex: 1;
}


swiper {
    height: 320rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

.page-section-spacing {
    width: 100%;
    height: 60rpx;
    display: flex;
    overflow: auto;
    /* background-color: #ccc; */
}

.scroll-view_H view {
    width: 100rpx;
    /* height: 60rpx; */
    background-color: #eee;
    margin-top: 5rpx;
    margin-left: 50rpx;
    /* background-color: #ccc; */
    color: #009933;
}


/* 用来清除滚动条 */
::-webkit-scrollbar {
    display: none;
}

/* 内容区域 */
.concent {
    width: 730rpx;
    margin: 20rpx auto;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 5rpx;

}

.con-val {
    width: 360rpx;
    height: 220rpx;
    /* background-color: red; */
    margin-bottom: 10rpx;
}
.con-val image {
    width: 360rpx;
}

.con-img {
    height: 157rpx;
    overflow: hidden;
}

.con-v {
    font-size: 28rpx;
    color: #4e4e4e;
}
.con-v2 {
    font-size: 20rpx;
    height: 30rpx;
    color: #797878;
    overflow: hidden;
}